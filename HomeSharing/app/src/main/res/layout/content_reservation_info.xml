<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ReservationInfoActivity"
    tools:showIn="@layout/activity_reservation_info">


    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="예약자"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <com.pkmmte.view.CircularImageView
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                app:border="true"
                app:shadow="false"
                android:src="@drawable/profile_sample" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textColor="#111111"
                    android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="체크인"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/check_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-01"
            android:textSize="20dp"
            android:textColor="#444444"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="체크아웃"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/check_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-01"
            android:textSize="20dp"
            android:textColor="#444444"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/people_layout"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="인원"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/people_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1명"
            android:textSize="20dp"
            android:textColor="#444444"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/money_layout"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>